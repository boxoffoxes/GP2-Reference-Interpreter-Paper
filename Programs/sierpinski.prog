\autonodetext{1}{$\mtt{m{:}0}$}%
\autonodetext{2}{$\mtt{1}$}%
\autonodetext{3}{$\mtt{0}$}%
\autonodetext{4}{$\mtt{0}$}%
\diredge{2}{3}\bowtext{2}{3}{-0.12}{$\mtt{0}$}%
