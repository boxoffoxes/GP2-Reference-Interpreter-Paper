\newcommand{\ngraph}[1]{%
\begin{graph}(1.2,1.5)%
\setupg%
\roundnode{1}(0.6,0.9)%
\autonodetext{1}{#1}%
\autonodetext{1}[s]{\tiny 1}%
\end{graph}%
}
\newcommand{\goesto}{\hspace{.25cm}$\dder$\hspace{.25cm}}

\newcommand{\startgraph}{%
\begin{graph}(4,3)%(-0.5,1)%
\setupg%
\roundnode{1}(0.5,2.2)%
\roundnode{2}(2.5,2.2)%
\roundnode{3}(1.5,0.5)%
\roundnode{4}(3.5,0.5)%
